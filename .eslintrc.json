{
	"env": {
		"node": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"debug": 0,
		"config": 0,
		"__base": 0,
		"appVersion": 0
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"curly": [
			"error",
			"all"
		],
		"space-before-blocks": [
			"error",
			"always"
		],
		"camelcase": [
			"error",
			{
				"properties": "always"
			}
		],
		"func-style": [
			"error",
			"expression"
		],
		"max-len": [
			"error",
			{
				"code": 80,
				"tabWidth": 4
			}
		],
		"no-const-assign": [
			"error"
		],
		"no-duplicate-imports": [
			"error"
		],
		"for-direction": [
			"error"
		],
		"no-cond-assign": [
			"error"
		],
		"no-console": [
			"error"
		],
		"no-constant-condition": [
			"error"
		],
		"no-dupe-keys": [
			"error"
		],
		"no-empty": [
			"error"
		],
		"no-extra-parens": [
			"error",
			"all"
		],
		"no-func-assign": [
			"error"
		],
		"no-inner-declarations": [
			"error"
		],
		"no-unreachable": [
			"error"
		],
		"no-empty-function": [
			"error",
			{
				"allow": [
					"constructors"
				]
			}
		],
		"no-multi-spaces": [
			"error"
		],
		"global-require": [
			"error"
		],
		"handle-callback-err": [
			"error",
			"err"
		],
		"array-bracket-spacing": [
			"error",
			"always",
			{
				"singleValue": false
			}
		],
		"block-spacing": [
			"error",
			"always"
		],
		"brace-style": [
			"error"
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"comma-spacing": [
			"error",
			{
				"before": false,
				"after": true
			}
		],
		"comma-style": [
			"error",
			"last"
		],
		"id-length": [
			"error",
			{
				"min": 2,
				"max": 40,
				"properties": "always",
				"exceptions": [
					"i",
					"j",
					"k",
					"l",
					"m"
				]
			}
		],
		"key-spacing": [
			"error",
			{
				"beforeColon": false,
				"afterColon": true
			}
		],
		"max-depth": [
			"error",
			4
		],
		"no-lonely-if": [
			"error"
		],
		"no-nested-ternary": [
			"error"
		],
		"no-unused-vars": [
			"error",
			{
				"args": "none"
			}
		]
	},
	"parserOptions": {
		"ecmaVersion": 6
	}
}